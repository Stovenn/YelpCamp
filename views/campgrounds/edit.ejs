
<%- include("../partials/header") %>

<div class="container">
  <h1 class="text-center">Edit <%= campground.name%></h1>
  <div style="width:30%; margin: 25px auto;">
    <form id="editCampgroundForm" action="/campgrounds/<%= campground._id%>?_method=PUT" method="POST">
      <div class="form-group">
        <input type="text" name="campground[name]" value="<%= campground.name%>" >
      </div>
      <div class="form-group">
        <input type="number" name="campground[price]" value="<%= campground.price%>" min="0.01" step="0.01" >
      </div>
      <div class="form-group">
        <input type="text" name="campground[image]" value="<%= campground.image %>" >
      </div>
      <div class="form-group">
        <textarea name="campground[description]"  cols="30" rows="5"><%= campground.description %></textarea>
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-primary btn-block" value="submit">
      </div>
    </form>
    <a href="/campgrounds">Go back</a>  
  </div>
</div>
   
<%- include("../partials/footer") %>