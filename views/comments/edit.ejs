<%- include("../partials/header") %>

<div class="container">
  <h1 class="text-center">Modify comment</h1>
  <div style="width:30%; margin: 25px auto;">
    <form id="editCommentForm" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
      <div class="form-group">
        <input type="text" name="comment[text]" value="<%= comment.text %>" required>
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-primary btn-block">
      </div>
    </form>
    <a href="/campgrounds/">Go back</a>  
  </div>
</div>
   
<%- include("../partials/footer") %>