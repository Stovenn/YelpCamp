<%- include("../partials/header") %>

<div class="container">
  <h1 class="text-center">New Comment to <%= campground.name %></h1>
  <div style="width:30%; margin: 25px auto;">
    <form id="newCommentForm" action="/campgrounds/<%= campground._id%>/comments" method="POST">
      <div class="form-group">
        <input type="text" name="comment[text]" placeholder="Enter your comment here" required>
      </div>
      <div class="form-group">
        <input type="submit" class="btn btn-primary btn-block">
      </div>
    </form>
    <a href="/campgrounds/">Go back</a>  
  </div>
</div>
   
<%- include("../partials/footer") %>