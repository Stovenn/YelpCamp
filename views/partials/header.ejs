<!doctype html>
<html lang="en">
  <head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <link rel="stylesheet" href="/stylesheets/main.css">
    <title></title>
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <a class="navbar-brand">Yelpcamp</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/campgrounds">Campgrounds</a>
          </li>
        </ul>
        <ul class="navbar-nav navbar-right mx-auto">
          <% if(!currentUser){ %>
            <li class="nav-item">
              <a class="nav-link" href="/login">Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register">Sign up</a>
            </li>
          <% }else{ %>
            <li class="nav-item">
              <a class="nav-link"  href="#">Signed in as <%= currentUser.username %></a>
            </li>
            <li class="nav-item">
              <a class="nav-link"  href="/logout">Logout</a>
            </li>
          <% } %>
        </ul>
      </div>
    </nav>

    <% if(errorMessage && errorMessage.length === 1 ) {%>
      <div class="container mt-3">
        <div class="alert alert-danger" role="alert"><%= errorMessage  %></div>
      </div>
    <%} else if (successMessage && successMessage.length > 1 ) {%>
        success.Message.forEach((message) =>{
          <div class="container mt-3">
            <div class="alert alert-danger" role="alert"><%= message.errorMessage  %></div>
          </div>
        })
    <% }%>

    <% if(successMessage && successMessage.length === 1 ) {%>
      <div class="container mt-3">
        <div class="alert alert-success" role="alert"><%= successMessage  %></div>
      </div>
    <%}%>
